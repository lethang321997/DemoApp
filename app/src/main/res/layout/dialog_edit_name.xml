<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_dialog"
    android:background="@drawable/dialog"
    android:gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_edit_name"
        android:textSize="@dimen/text_size_dialog"
        tools:ignore="SpUsage" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/editName"
        android:layout_width="@dimen/width_edit_text_dialog"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:autofillHints=""
        tools:ignore="LabelFor" />
    <Button
        android:id="@+id/buttonEditNameDone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button"
        android:text="@string/text_edit_button" />
</LinearLayout>

</LinearLayout>
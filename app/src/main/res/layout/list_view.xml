<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >

    <TextView
        android:id="@+id/textList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@drawable/text_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/margin_vertical_list"
        android:gravity="end|center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonList"
            android:layout_width="@dimen/width_button_edit"
            android:layout_height="@dimen/height_button_edit"
            android:background="@drawable/button"
            android:text="@string/text_edit_button"
            android:layout_marginEnd="@dimen/margin_left_edit_button"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="@dimen/layout_image"
            android:layout_height="@dimen/layout_image"
            android:background="@drawable/button_image"
            app:srcCompat="@drawable/delete"
            android:contentDescription="@string/todo"  />
    </LinearLayout>


</LinearLayout>